{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RUN: アプリバージョン名の取得",
            "type": "process",
            "command": "jshell",
            "args": [
                ".github/scripts/get-version-name/get-version-name.jsh",
            ]
        },
        {
            "label": "TEST: アプリバージョン名の取得",
            "type": "process",
            "command": "sh",
            "args": [
                ".github/scripts/get-version-name/test.sh",
            ]
        },
        {
            "label": "RUN: アプリバージョン更新",
            "type": "process",
            "command": "jshell",
            "args": [
                "-R-Dargs=${input:versionMajor} ${input:versionMinor} ${input:versionPatch}",
                ".github/scripts/set-version/set-version.jsh",
            ]
        },
        {
            "label": "TEST: アプリバージョン情報の更新",
            "type": "process",
            "command": "sh",
            "args": [
                ".github/scripts/set-version/test.sh",
            ]
        },
    ],
    "inputs": [
        {
            "id": "versionMajor",
            "type": "promptString",
            "description": "バージョン情報: major"
        },
        {
            "id": "versionMinor",
            "type": "promptString",
            "description": "バージョン情報: minor"
        },
        {
            "id": "versionPatch",
            "type": "promptString",
            "description": "バージョン情報: patch"
        }
    ]
}